{
    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "name": "Photo Downloader",
    "description": "Save images from social photo sites.",
    "icons": {
        "128": "icon-128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "icon-16.png",
            "32": "icon-32.png"
        },
        "default_title": "Download Image"
    },
    "permissions": [
        "declarativeContent",
        "activeTab",
        "downloads"
    ],
    "version": "1.1"
}
